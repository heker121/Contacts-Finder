<% include partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Contacts Finder</h1>
      <h3>
        Email's and Number's
      </h3>
    </div>
    <div class="col-md-6">

      <h1>Search by name</h1>
      <section class="list-wrap">
        <label for="search-text">Start Searching...</label>
        <input type="text" id="search-text" placeholder="..." class="search-box">
        <span class="list-count"></span>
        <ul id="list">
          <div class="row">
            <% contacts.forEach(function(contact){ %>
            <div class="col-md-12">
              <li class="in">
                <a href="/<%= contact._id %>">
                  <%= contact.degree %>
                  <%= contact.name %> - <b>
                    <%= contact.phone %> </b>

                </a>
              </li>
            </div>
            <% }); %>
          </div>
          <span class="empty-item">No Match</span>
        </ul>
      </section>
    </div>
    <div class="col-md-6">
      <h1>Search by Department</h1>
      <nav>
        <div class="nav nav-tabs" id="myTab" role="tablist">
          <a class="nav-item nav-link active" id="nav-ceo-tab" data-toggle="tab" href="#nav-CEO" role="tab" aria-controls="nav-ceo" aria-selected="true">CEO</a>
          <a class="nav-item nav-link" id="nav-IT-tab" data-toggle="tab" href="#nav-IT" role="tab" aria-controls="nav-IT" aria-selected="false">IT</a>
          <a class="nav-item nav-link" id="nav-test-tab" data-toggle="tab" href="#nav-test" role="tab" aria-controls="nav-test" aria-selected="false">Test</a>
        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade active show" id="nav-CEO" role="tabpanel" aria-labelledby="nav-ceo-tab">
          <% contacts.forEach(function(contact){ %>
          <% if (contact.position == "CEO" ) { %>
          <div class="col-md-12">
            <li class="in">
              <a href="/contact/<%= contact._id %>">
                <%= contact.degree %>
                <%= contact.name %> - <b>
                  <%= contact.phone %> </b>
              </a>
            </li>
          </div>
          <%  } %>
          <% }); %>
        </div>
        <div class="tab-pane fade" id="nav-IT" role="tabpanel" aria-labelledby="nav-IT-tab">
          <% contacts.forEach(function(contact){ %>
          <% if (contact.position == "IT" ) { %>
          <div class="col-md-12">
            <li class="in">
              <a href="/contact/<%= contact._id %>">
                <%= contact.degree %>
                <%= contact.name %> - <b>
                  <%= contact.phone %> </b>
              </a>
            </li>
          </div>
          <%  } %>
          <% }); %>
        </div>
        <div class="tab-pane fade" id="nav-test" role="tabpanel" aria-labelledby="nav-test-tab">
          <% contacts.forEach(function(contact){ %>
          <% if (contact.position == "Test" ) { %>
          <div class="col-md-12">
            <li class="in">
              <a href="/contact/<%= contact._id %>">
                <%= contact.degree %>
                <%= contact.name %> - <b>
                  <%= contact.phone %> </b>
              </a>
            </li>
          </div>
          <%  } %>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>
